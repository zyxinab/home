# ====================================
# 站点基本信息配置
# ====================================
VITE_SITE_NAME = "Your Site Name" # 站点名称
VITE_SITE_AUTHOR = "Your Name" # 作者名称
VITE_SITE_KEYWORDS = "Your Name,个人主页,homepage" # SEO 关键词，用逗号分隔
VITE_SITE_DES = "这是一个个人主页" # 站点简介描述
VITE_SITE_URL = "https://yoursite.com" # 站点域名地址
VITE_SITE_LOGO = "/images/icon/favicon.ico" # 站点主图标（浏览器标签栏）
VITE_SITE_MAIN_LOGO = "/images/icon/logo.png" # 主页显示图标
VITE_SITE_APPLE_LOGO = "/images/icon/apple-touch-icon.png" # Apple 设备图标

# ====================================
# 主页显示文本配置
# ====================================
VITE_DESC_HELLO = "Hello World!" # 主页问候语
VITE_DESC_TEXT = "一个建立于 21 世纪的小站，存活于互联网的边缘" # 主页描述文本
VITE_DESC_HELLO_OTHER = "Oops !" # 彩蛋问候语
VITE_DESC_TEXT_OTHER = "哎呀，这都被你发现了（ 再点击一次可关闭 ）" # 彩蛋描述文本

# ====================================
# 社交链接配置
# ====================================
## 社交链接请在 src/assets/socialLinks.json 文件中配置
## 支持的平台：GitHub, QQ, 微信, 邮箱, Telegram, Twitter, Bilibili 等

# ====================================
# 网站链接配置
# ====================================
## 网站链接请在 src/assets/siteLinks.json 文件中配置
## 图标名称可前往 https://www.xicons.org 自行挑选
## 在 src/components/Links.vue 中引入对应图标组件

# ====================================
# 天气服务配置
# ====================================
## 高德地图 Web 服务 API Key
## 申请地址：https://console.amap.com/dev/key/app
## 注意：请申请 Web 服务类型（不是 Web 端 JS API）
## 免费版本每日限额 5000 次调用
## 若不配置或配置错误，将自动使用备用天气API
VITE_WEATHER_KEY = ""

# ====================================
# 建站时间配置
# ====================================
## 用于计算建站天数，显示在页脚
## 格式：YYYY-MM-DD 或仅年份 YYYY
## 不需要可设为空
VITE_SITE_START = "2024-01-01"

# ====================================
# ICP 备案配置
# ====================================
## 中国大陆网站备案号
## 不需要可设为空
VITE_SITE_ICP = ""

# ====================================
# 音乐播放器配置
# ====================================
## Meting API 服务地址（用于获取音乐数据）
## 推荐的免费 API 服务：
## - https://api.i-meto.com/meting/api （主要推荐）
## - https://api.wuenci.com/meting/api/ （备用）
## 也可以自建 Meting API 服务
VITE_SONG_API = "https://api.i-meto.com/meting/api"

## 音乐平台选择
## 支持：netease（网易云音乐）, tencent（QQ音乐）, xiami（虾米音乐）等
VITE_SONG_SERVER = "netease"

## 播放类型
## song: 单曲, playlist: 歌单, album: 专辑, search: 搜索, artist: 艺术家
VITE_SONG_TYPE = "playlist"

## 播放内容 ID
## 对应上面播放类型的具体 ID（歌曲ID、歌单ID、专辑ID等）
## 可在对应音乐平台的分享链接中找到
## 不需要音乐播放器可设为空
VITE_SONG_ID = ""

# ====================================
# 配置说明
# ====================================
## 1. 复制此文件为 .env 并填入你的配置
## 2. 重新启动开发服务器使配置生效
## 3. 构建生产版本时确保所有必要配置已填写
## 4. 敏感信息（如 API Key）请妥善保管，不要提交到公共仓库
